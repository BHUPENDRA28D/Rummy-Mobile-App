<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#1A142C"
    android:id="@+id/idList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/idImgOne"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/one" />
        <TextView
            android:id="@+id/idTitleOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Holy Rummy"
            android:layout_below="@+id/idImgOne"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/btnText"/>

        <TextView
            android:id="@+id/idDetailOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="Hello welcome to holly rummy There are many variations of rummy, with different rules and variations in the number of cards used, the number of players, and the way points are scored. Some variations of rummy are played with jokers, which can be used as wild cards to represent any rank or suit."
            android:layout_below="@+id/idTitleOne"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/btnText"/>

        <ImageView
            android:id="@+id/idStart"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/start"

            android:layout_below="@+id/idDetailOne"/>

        <ImageView
            android:id="@+id/idImgTwo"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bw"
            android:layout_below="@+id/idStart"/>

        <TextView
            android:id="@+id/idTitleTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Big Bonus offers"
            android:layout_below="@+id/idImgTwo"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/btnText"/>

        <TextView
            android:id="@+id/idDetailTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="Rummy is typically played for points, with the winner being the player who reaches a predetermined number of points first. Points can be scored by forming melds, by laying off cards onto existing melds, and by laying down an entire hand of melds in a single turn, known as going out. Points may also be scored for any cards that are left in the other players' hands at the end of the game."
            android:layout_below="@+id/idTitleTwo"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/btnText"/>


        <ImageView
            android:id="@+id/idImgthree"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/three"
            android:layout_below="@+id/idDetailTwo"/>

        <TextView
            android:id="@+id/idTitleThree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Additional Offers."
            android:layout_below="@+id/idImgthree"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/btnText"/>

        <TextView
            android:id="@+id/idDetailThree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="There are many online platforms and mobile apps that allow you to play rummy against other players or against computer-controlled opponents. Some of these platforms may offer real money prizes or allow you to purchase in-game currency or other items. Before playing online, be sure to familiarize yourself with the rules and any potential risks or costs associated with the game."
            android:layout_below="@+id/idTitleThree"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/btnText"/>

        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/btnText"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Disclamer :"
            android:id="@+id/idDis"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/idDetailThree"/>
        
        <TextView
            android:id="@+id/terms"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• This app ts not for Andhra Pradesh. Assam. Nagaland. Odisha.
Sikkim. and Telangana users,
\n• This app only for 18+ users
\n• lerm: and Wse"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_below="@id/idDis"/>

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/btnText"
            android:layout_below="@id/terms"
            android:text="Tap to play"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#1A142C"/>
        
    </RelativeLayout>

</ScrollView>
